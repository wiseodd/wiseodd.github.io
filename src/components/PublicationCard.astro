---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { cn } from '@/utils'

const { pub } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}')
---

<div class='relative rounded-2xl border border-border bg-primary-foreground px-5 py-3'>
	<div class='flex flex-col gap-y-1.5'>
		<div class='flex flex-col gap-y-0.5'>
			<span class='text-base font-medium'>{pub.title}</span>
			<span
				class='text-muted-foreground'
				set:html={pub.author
					.map((name: string) =>
						name.includes('Kristiadi') ? '<span class="text-green-600">' + name + '</span>' : name
					)
					.join(', ')}
			/>
			<span>{pub.venue} {pub.year}</span>
		</div>
		<slot />
	</div>
</div>
